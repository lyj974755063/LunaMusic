<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:id="@+id/nowPlay_background"
        android:layout_height="match_parent">

    <com.example.androidisshit.component.VerticalTextView
            android:id="@+id/nowPlay_title"
            android:text="@string/album_title"
            android:layout_width="171dp"
            android:layout_height="899dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/nowPlaying_albumTitleSize"
            android:textScaleX="0.5"
            android:fontFamily="sans-serif-light"
            android:ellipsize="none"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.31"
            android:layout_marginTop="32dp" android:layout_marginBottom="32dp"/>
    <com.example.androidisshit.component.NowPlayingCoverView
            android:id="@+id/nowPlay_cover"
            android:layout_width="380dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.354"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_height="380dp"/>

    <TextView
            android:id="@+id/nowPlay_artist"
            android:text="@string/nowPlaying_artist"
            android:textSize="30sp"
            android:layout_width="112dp"
            android:layout_height="238dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.72"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>
